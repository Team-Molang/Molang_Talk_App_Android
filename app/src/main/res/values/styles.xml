<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SignUp" />

    <style name="AppTheme.SignUp.Section" />

    <style name="AppTheme.SignUp.Section.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="AppTheme.SignUp.Section.Title" />

    <style name="AppTheme.SignUp.Section.Title.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
